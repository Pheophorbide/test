.table
  box-sizing border-box
  border 1px solid lightgray
  width 100%
  border-collapse collapse
  user-select none

.row
  &:hover
    background-color rgba(0,0,0,0.1)

.active
  background-color rgba(0,0,0,0.1)

.item
  padding 20px
  cursor: pointer
  border 1px solid lightgray
  text-align center

.header
  font-size 18px
  font-weight bold
  color white
  background-color lightblue
  border: 1px solid lightgrey

.bold
  font-weight bold


